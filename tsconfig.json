{
	"compilerOptions": {
		"target": "es2022",
		"module": "CommonJS",
		"moduleResolution": "Node10",
		"lib": [
			"es2022"
		],
		"baseUrl": ".",
		"paths": {
			"@shared/*": ["./shared/src/*"]
		},
		"outDir": "out",
		"sourceMap": true,
		"strict": true,
		"rootDir": ".",
		"jsx": "react-jsx",
		"jsxImportSource": "@shared",
		"forceConsistentCasingInFileNames": true,
		"rewriteImports": true
	},
	"include": ["src/extension.ts", "shared/src/jsx.d.ts"],
	"exclude": ["node_modules", ".vscode-test", "hidden"]
}
